{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ticketing support dump schema",
  "description": "This schema describes the accepted format of ticketing supports dumps defined by the CN03/GT4 group.",
  "type": "object",
  "properties": {
    "technicalData": {
      "type": "object",
      "properties": {
        "dumpInfo": {
          "$ref": "#/definitions/dumpInfo"
        },
        "family": {
          "type": "string",
          "enum": [
            "CalypsoPO"
          ]
        },
        "communication": {
          "$ref": "#/definitions/communication"
        }
      },
      "required": ["dumpInfo", "family"]
    },
    "data": {
      "type": "object"
    }
  },
  "oneOf": [
    {
      "if": {
        "properties": {
          "family": {
            "const": "CalypsoPO"
          }
        }
      },
      "then": {
        "properties": {
          "data": {
            "$ref": "#/definitions/CalypsoPO"
          }
        }
      }
    }
  ],
  "definitions": {
    "hex_string": {
      "type": "string",
      "pattern": "^(?:[0-9a-fA-F]{2})+$"
    },
    "EF": {
      "type": "object",
      "required": [
        "FCP"
      ],
      "properties": {
        "FCP": {
          "$ref": "#/definitions/hex_string"
        },
        "records": {
          "type": "object",
          "patternProperties": {
            "^[a-fA-F0-9]{2}$": {
              "$ref": "#/definitions/hex_string"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      }
    },
    "DF": {
      "type": "object",
      "required": [
        "FCP"
      ],
      "properties": {
        "FCP": {
          "$ref": "#/definitions/hex_string"
        },
        "EFs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/EF"
          }
        }
      }
    },
    "CalypsoContainers": {
      "type": "object",
      "properties": {
        "AID": {
          "$ref": "#/definitions/hex_string"
        },
        "CSN": {
          "$ref": "#/definitions/hex_string"
        },
        "FCI": {
          "$ref": "#/definitions/hex_string"
        },
        "DF": {
          "$ref": "#/definitions/DF"
        }
      },
      "required": [
        "FCI",
        "DF"
      ]
    },
    "CalypsoPO": {
      "type": "object",
      "properties": {
        "containers": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/CalypsoContainers"
          }
        }
      }
    },
    "dumpInfo": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "title": "Version of the schema for this dump",
          "type": "string",
          "pattern": "^(([0-9]+)\\.([0-9]+))$"
        },
        "dumpDate": {
          "title": "Date when the support was dumped",
          "type": "string",
          "format": "date-time"
        },
        "comments": {
          "title": "Free comments",
          "type": "string"
        }
      },
      "required": [
        "schemaVersion",
        "dumpDate"
      ]
    },
    "communication" : {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["contactLess", "contact"]
        }
      },
      "if": {
        "properties": {
          "mode" : {
            "const": "contactLess"
          }
        }
      },
      "then": {
        "properties": {
          "protocol": {
            "type": "string",
            "enum": ["ISO_A", "ISO_B", "BPrime"]
          },
          "ATQ": {
            "$ref": "#/definitions/hex_string"
          }
        }
      },
      "else": {
        "properties": {
          "protocol": {
            "type": "string",
            "enum": ["T=0", "T=1", "HSP"]
          },
          "ATR": {
            "$ref": "#/definitions/hex_string"
          }
        }
      }
    }
  },
  "required": [
    "information",
    "data"
  ]
}